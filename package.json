{
  "name": "vscode-vamiga-debugger",
  "displayName": "Vamiga Debugger",
  "description": "VSCode extension for Vamiga debugging with webview panel",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onCommand:vamiga-debugger.openPanel",
    "onDebugResolve:vamiga"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vamiga-debugger.openPanel",
        "title": "Open Vamiga Debugger Panel"
      }
    ],
    "configuration": {
      "title": "Vamiga Debugger",
      "properties": {
        "vamiga-debugger.defaultViewColumn": {
          "type": "string",
          "enum": ["one", "two", "three", "beside", "active"],
          "enumDescriptions": [
            "First editor column",
            "Second editor column", 
            "Third editor column",
            "Next to the active editor",
            "Same column as active editor"
          ],
          "default": "beside",
          "description": "Default position for the Vamiga emulator window"
        }
      }
    },
    "debuggers": [
      {
        "type": "vamiga",
        "languages": ["c", "cpp", "assembly"],
        "label": "Vamiga Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the ADF disk image to debug",
                "default": "${workspaceFolder}/build/program.adf"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "vamiga",
            "request": "launch",
            "name": "Launch Vamiga",
            "program": "${workspaceFolder}/build/program.adf",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Vamiga: Launch",
            "description": "A new configuration for debugging with Vamiga",
            "body": {
              "type": "vamiga",
              "request": "launch",
              "name": "Launch Vamiga",
              "program": "${workspaceFolder}/build/program.adf",
              "stopOnEntry": true
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.64.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "author": "",
  "license": "ISC"
}