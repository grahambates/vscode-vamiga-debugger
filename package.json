{
  "name": "vscode-vamiga-debugger",
  "displayName": "Vamiga Debugger",
  "description": "VSCode extension for Vamiga debugging with webview panel",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebugResolve:vamiga"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Vamiga Debugger",
      "properties": {
        "vamiga-debugger.defaultViewColumn": {
          "type": "string",
          "enum": [
            "one",
            "two",
            "three",
            "beside",
            "active"
          ],
          "enumDescriptions": [
            "First editor column",
            "Second editor column",
            "Third editor column",
            "Next to the active editor",
            "Same column as active editor"
          ],
          "default": "beside",
          "description": "Default position for the Vamiga emulator window"
        }
      }
    },
    "debuggers": [
      {
        "type": "vamiga",
        "languages": [
          "m68k"
        ],
        "label": "vAmiga Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the Amiga program to run",
                "default": "${workspaceFolder}/out/a.exe"
              },
              "debugProgram": {
                "type": "string",
                "description": "Optional alternate path to program file containing debug symbols. Defaults to same as 'program'. Making a separate build allows for a smaller exe loaded by the Amiga, which uses less RAM and loads faster.",
                "default": null
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "vamiga",
            "request": "launch",
            "name": "vAmiga: Launch",
            "program": "${workspaceFolder}/out/a.exe",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "vAmiga: Launch",
            "description": "A new configuration for debugging with vAmiga",
            "body": {
              "type": "vamiga",
              "request": "launch",
              "name": "vAmiga: Launch",
              "program": "^\"\\${workspaceFolder\\}/out/a.exe\"",
              "stopOnEntry": true
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "test:unit": "npm run compile && mocha out/test/**/*.test.js --ui tdd",
    "test:coverage": "npm run compile && nyc mocha out/test/**/*.test.js --ui tdd",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.64.0",
    "expr-eval": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "24.3.1",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "@vscode/test-cli": "0.0.11",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "9.35.0",
    "prettier": "^3.6.2",
    "sinon": "^18.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "author": "",
  "license": "ISC"
}
