{
  "name": "vscode-vamiga-debugger",
  "displayName": "VAmiga Debugger",
  "description": "Debug Amiga programs with an integrated VAmiga emulator in vscode",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git@github.com:grahambates/vscode-vamiga-debugger.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebugResolve:vamiga"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vamiga-debugger.eof",
        "title": "End of Frame",
        "icon": "$(run-below)",
        "enablement": "debugType == 'vamiga' && debugState == 'stopped'"
      },
      {
        "command": "vamiga-debugger.eol",
        "title": "End of Line",
        "icon": "$(debug-line-by-line)",
        "enablement": "debugType == 'vamiga' && debugState == 'stopped'"
      }
    ],
    "menus": {
      "debug/toolBar": [
        {
          "command": "vamiga-debugger.eof",
          "when": "debugType == 'vamiga'",
          "group": "navigation@41"
        },
        {
          "command": "vamiga-debugger.eol",
          "when": "debugType == 'vamiga'",
          "group": "navigation@42"
        }
      ]
    },
    "configuration": {
      "title": "Vamiga Debugger",
      "properties": {
        "vamiga-debugger.defaultViewColumn": {
          "type": "string",
          "enum": [
            "one",
            "two",
            "three",
            "beside",
            "active"
          ],
          "enumDescriptions": [
            "First editor column",
            "Second editor column",
            "Third editor column",
            "Next to the active editor",
            "Same column as active editor"
          ],
          "default": "beside",
          "description": "Default position for the Vamiga emulator window"
        }
      }
    },
    "debuggers": [
      {
        "type": "vamiga",
        "languages": [
          "m68k"
        ],
        "label": "vAmiga Debug",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the Amiga program to run",
                "default": "${workspaceFolder}/out/a.exe"
              },
              "debugProgram": {
                "type": "string",
                "description": "Optional alternate path to program file containing debug symbols. Defaults to same as 'program'. Making a separate build allows for a smaller exe loaded by the Amiga, which uses less RAM and loads faster.",
                "default": null
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol",
                "default": false
              },
              "fastLoad": {
                "type": "boolean",
                "description": "Inject program directly into memory",
                "default": false
              },
              "emulatorOptions": {
                "type": "object",
                "properties": {
                  "programPath": {
                    "type": "string",
                    "description": "Path to the Amiga program to run"
                  },
                  "kickstartRomPath": {
                    "type": "string",
                    "description": "Path to kickstart ROM file"
                  },
                  "kickstartExtPath": {
                    "type": "string",
                    "description": "Path to extended kickstart ROM file"
                  },
                  "useArosRom": {
                    "type": "boolean",
                    "description": "Use free AROS ROMs"
                  },
                  "showNavBar": {
                    "type": "boolean",
                    "description": "Show navigation bar"
                  },
                  "wideScreen": {
                    "type": "boolean",
                    "description": "Stretch to full width, regardless of aspect ratio"
                  },
                  "darkMode": {
                    "type": "boolean",
                    "description": "Dark mode"
                  },
                  "enableMouse": {
                    "type": "boolean",
                    "description": "Enable mouse"
                  },
                  "displayZoom": {
                    "type": "string",
                    "enum": [
                      "viewport tracking", "borderless", "narrow", "standard", "wider", "overscan", "extreme"
                    ],
                    "description": "Display zoom mode"
                  },
                  "useGpu": {
                    "type": "boolean",
                    "description": "Render with GPU, rather than software"
                  },
                  "agnusRevision": {
                    "type": "string",
                    "enum": ["OCS_OLD", "OCS", "ECS_1MB", "ECS_2MB"],
                    "description": "Agnus chip revision"
                  },
                  "deniseRevision": {
                    "type": "string",
                    "enum": ["OCS", "ECS"],
                    "description": "Denise chip revision"
                  },
                  "cpuRevision": {
                    "type": "string",
                    "enum": ["68000", "68010", "68020", "fake_68030"],
                    "description": "CPU model"
                  },
                  "cpuSpeed": {
                    "type": "string",
                    "enum": ["7MHz", "14Hz", "21Hz", "28Hz", "35Hz", "43Hz", "57Hz", "85Hz", "99Hz"],
                    "description": "CPU speed"
                  },
                  "chipRam": {
                    "type": "string",
                    "enum": ["256k", "512k", "1M", "2M"],
                    "description": "Chip RAM size"
                  },
                  "slowRam": {
                    "type": "string",
                    "enum": ["0", "256k", "512k"],
                    "description": "Slow RAM size"
                  },
                  "fastRam": {
                    "type": "string",
                    "enum": ["0", "256k", "512k", "1M", "2M", "8M"],
                    "description": "Fast RAM size"
                  },
                  "blitterAccuracy": {
                    "type": "number",
                    "enum": [0, 1, 2],
                    "description": "Blitter accuracy level"
                  },
                  "floppyDriveCount": {
                    "type": "number",
                    "enum": [1, 2, 3, 4],
                    "description": "Number of floppy drives"
                  },
                  "driveSpeed": {
                    "type": "number",
                    "enum": [-1, 1, 2, 4, 8],
                    "description": "Floppy drive speed multiplier (-1: auto)"
                  }
                }
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "vamiga",
            "request": "launch",
            "name": "vAmiga: Launch",
            "program": "${workspaceFolder}/out/a.exe",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "vAmiga: Launch",
            "description": "A new configuration for debugging with vAmiga",
            "body": {
              "type": "vamiga",
              "request": "launch",
              "name": "vAmiga: Launch",
              "program": "^\"\\${workspaceFolder\\}/out/a.exe\"",
              "stopOnEntry": true
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm run check-types && node esbuild.js --watch",
    "package": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.68.0",
    "expr-eval": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "extension.test.ts",
      "integration.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/test/**/*"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/jestSetup.ts"
    ]
  },
  "author": "",
  "license": "ISC"
}
